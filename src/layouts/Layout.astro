<!-- Swipers -->
<script>
	// Core de Swiper y estilos
	import Swiper from "swiper";
	import "swiper/css";
	// Módulo Navigation de Swiper y estilos
	import { Navigation } from "swiper/modules";
	import { Pagination } from 'swiper/modules';

	import "swiper/css/pagination";

	// Configurar Swiper
	new Swiper(".swiperTestimonios", {
		modules: [Navigation],
		slidesPerView: 2.8,
		spaceBetween: 8,
		initialSlide: 1,
		centeredSlides: true,
		breakpoints: {
			0: {
				slidesPerView: 1.1,
			},
			568: {
				slidesPerView: 2.8,
			},
		},
	});
	// Configurar Swiper
	new Swiper(".swiperPlans", {
		modules: [Pagination],
		slidesPerView: 2.8,
		spaceBetween: 4,
		initialSlide: 1,
		centeredSlides: true,
		breakpoints: {
			0: {
				slidesPerView: 1.05,
			},
			568: {
				slidesPerView: 1.05,
				initialSlide: 0,
				spaceBetween: 32,
				centeredSlides: false,
			},
		},
		pagination: {
			el: ".testimonios-pagination",
		},
	});
</script>

